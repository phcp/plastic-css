{
  "name": "plastic-css",
  "version": "1.0.0",
  "description": "A Flexible CSS Framework",
  "main": "index.js",
  "scripts": {
    "build:css:compressed": "cleancss -o dist/plastic.min.css dist/plastic.css",
    "build:css:expanded": "node-sass scss -o dist --output-style expanded",
    "print:build": "echo \"Plastic.css: build completed.\"",
    "print:watch": "echo \"Plastic.css: watching...\"",
    "build:css": "npm-run-all --sequential build:css:* print:build",
    "watch:css": "npm-run-all build:css:* -w print:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phcp/plastic-css.git"
  },
  "keywords": [
    "css",
    "framework",
    "flex",
    "flexbox",
    "flexible",
    "node",
    "sass"
  ],
  "author": "Paulo Henrique",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phcp/plastic-css/issues"
  },
  "homepage": "https://github.com/phcp/plastic-css#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "clean-css-cli": "^4.1.10",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^4.1.1",
    "sass-lint": "^1.12.1"
  }
}
